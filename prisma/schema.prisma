generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User { //criando uma tabela

  id String @id @default(uuid())
  name String
  email String @unique
  password_hash String
  created_at DateTime @default(now())
  CheckIn CheckIn[]


  //hashing --> nao da pra descriptografar o dado 

  @@map("users")
}

//dois @ nos configuramos a tabela em geral, podendo mudar nome e etc
//um @ nos estamos configurando a coluna 


model CheckIn {

  id String @id @default(uuid())
  created_at DateTime @default(now())
  validated_at DateTime?

  user User @relation(fields: [user_id], references: [id])
  user_id String

  gym Gym @relation(fields: [gym_id], references: [id])
  gym_id String


  @@map("check_ins")
}

model Gym {

  id String @id @default(uuid())
  title String
  description String?
  phone String?
  latitude Decimal
  longitude Decimal
  
  CheckIn CheckIn[]


  @@map("gyms")
}

